<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal">





    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/orderconfirmationtext"
        android:lines="3"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textView24"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView24"
        android:background="@drawable/border_shadow"
        android:elevation="5dp"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:background="@drawable/bisleri"
            android:layout_marginStart="27dp"
            android:layout_marginTop="31dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Order id:"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView25"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_marginStart="59dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="qty"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/txt_valueqty"
            android:layout_alignTop="@+id/textView25"
            android:layout_toEndOf="@+id/textView25" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Empty Can:"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView27"
            android:layout_alignTop="@+id/textView26"
            android:layout_toStartOf="@+id/textView26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:text="emptycan"
            android:id="@+id/textView26"
            android:layout_below="@+id/txt_valueqty"
            android:layout_toEndOf="@+id/txt_valueqty"
            android:layout_marginTop="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:text="Del. Type:"
            android:id="@+id/textView28"
            android:layout_alignTop="@+id/textView29"
            android:layout_alignStart="@+id/textView27" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"
            android:text="deltype"
            android:id="@+id/textView29"
            android:layout_below="@+id/textView27"
            android:layout_toEndOf="@+id/textView28"
            android:layout_marginTop="19dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn"
            android:textColor="@android:color/white"
            android:text="Go To Home"
            android:id="@+id/btn_gotohome"
            android:layout_marginBottom="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/textView29" />
    </RelativeLayout>

</RelativeLayout>