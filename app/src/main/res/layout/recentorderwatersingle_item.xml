<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_shadow"
        android:elevation="5dp"
        android:padding="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Order No"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textView9"
            android:layout_marginTop="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="orderno"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/textView10"
            android:layout_marginStart="20dp"
            android:layout_above="@+id/textView11"
            android:layout_toEndOf="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date"
            android:textStyle="normal"
            android:textSize="16sp"
            android:id="@+id/textView11"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="totalamount"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/textView12"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="pickupdate"
            android:textSize="16sp"
            android:textStyle="normal"
            android:id="@+id/textView13"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="pickuptime"
            android:textSize="16sp"
            android:id="@+id/textView68"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ph_user"
            android:id="@+id/ic_profile"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/textView68"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Item Name:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/textView70"
            android:layout_alignTop="@+id/ic_profile"
            android:layout_alignStart="@+id/textView71" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Item Quantity:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/textView71"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView70"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Qty"
            android:id="@+id/textView72"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/textView71"
            android:layout_toEndOf="@+id/textView71" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="itemname"
            android:textStyle="bold"
            android:id="@+id/textView73"
            android:layout_alignTop="@+id/textView70"
            android:layout_toEndOf="@+id/textView70" />
    </RelativeLayout>
</RelativeLayout>