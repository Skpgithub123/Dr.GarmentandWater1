<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:background="@drawable/ic_arrow_back_white_24dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/txt_save"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"/>

    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true">



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_color_selector"
        android:elevation="6dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/etFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_person_pin_black_24dp"
            android:drawableTint="@color/red_400"
            android:drawablePadding="10dp"
            android:hint="@string/placeholder_first_name"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#616980"
            android:textColorHint="@color/profile_text_color" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_color_selector"
        android:elevation="6dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/etLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_person_pin_black_24dp"
            android:drawableTint="@color/red_400"
            android:drawablePadding="15dp"
            android:hint="@string/placeholder_last_name"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#616980"
            android:textColorHint="@color/profile_text_color" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_color_selector"
        android:elevation="6dp"
        android:layout_marginTop="190dp"
        android:orientation="vertical"
        android:gravity="center_vertical">


        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawableTint="@color/red_400"
            android:drawablePadding="15dp"
            android:hint="@string/placeholder_Mobile_number"
            android:inputType="phone"
            android:maxLength="10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#616980"
            android:textColorHint="@color/profile_text_color" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grid_color_selector"
            android:elevation="6dp"
            android:layout_marginTop="250dp"
            android:orientation="vertical"
            android:gravity="center_vertical">


            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableTint="@color/red_400"
                android:drawablePadding="15dp"
                android:hint="@string/placeholder_email"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#616980"
                android:textColorHint="@color/profile_text_color" />


        </LinearLayout>



    </android.support.v7.widget.CardView>

