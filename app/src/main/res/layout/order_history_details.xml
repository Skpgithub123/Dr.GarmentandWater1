<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.saravanan.waterandlander_recentorder.OrderHistoryDetails">





    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8673ff">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_rew"
            android:layout_gravity="center|left"
            android:tint="#ff0000"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Order Details"
            android:id="@+id/toolbar_myorderdetails"
            android:typeface="serif"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


            </RelativeLayout>
        </FrameLayout>


    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:orientation="vertical">



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_viewwaterfullorderdetails">
    </ListView>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:background="#ff2828"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Return Can Details"
            android:padding="10dp"
            android:background="#760008"
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/vieworder_returncan_details"
            android:textColor="#ffffff"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cacaca"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_promobenifit"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Promo Benefit"
                        android:textColor="#fff"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".2"
                        android:id="@+id/promo_benefit"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Item price"
                        android:layout_weight=".1"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:id="@+id/promo_benefit_display"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_retruncandetails"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total Return Can Amount"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:layout_marginLeft="10dp"
                        android:textSize="18sp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:id="@+id/grand_total_empty_can_amount"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total return can price"
                        android:layout_weight=".1"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:id="@+id/grand_total_empty_can_amount_display"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="#cacaca"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_grandtotlaamount"
                    android:orientation="horizontal">



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Grand Total Amount"
                        android:textColor="#fff"
                        android:singleLine="true"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight=".2"
                        android:id="@+id/grand_total_amount"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total amount"
                        android:layout_weight=".1"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textColor="#000"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:id="@+id/grand_total_amount_display"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#cacaca"/>


            </LinearLayout>

    </LinearLayout>
</LinearLayout>
