<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal">





    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/border_shadow"
        android:elevation="5dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:id="@+id/lineardelivery"
       android:layout_below="@+id/toolbar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing Address"
            android:textSize="17sp"
            android:id="@+id/txtbillingaddressgeading"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/ic_mode_edit_black_24dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_valuebilladdress"
            android:textSize="15sp"
            android:layout_below="@+id/txtbillingaddressgeading"/>



        </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promo Code"
        android:textSize="12sp"
        android:id="@+id/checkBox3"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total Amount:"
        android:textStyle="bold"
        android:id="@+id/textView17"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/checkBox3"
        android:layout_toEndOf="@+id/checkBox3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="valueamt"
        android:textStyle="bold"
        android:id="@+id/textView22"
        android:layout_alignTop="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Payment"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/textView23"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/checkBox3"
        android:layout_marginTop="29dp" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_alignEnd="@+id/textView22">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiogroup">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery(COD)"
                android:id="@+id/radio_cod"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online Payment"
                android:id="@+id/radio_onlinepayment"
              />

        </RadioGroup>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textColor="@android:color/white"
            android:background="@drawable/login_btn"
            android:id="@+id/btn_placeorder"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="27dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</RelativeLayout>