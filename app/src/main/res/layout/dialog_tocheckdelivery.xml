    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:padding="5dp"
        android:background="@drawable/bordor_shadow_promo"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_closecheckdeliverypopup"
            android:src="@android:drawable/ic_delete"
            android:tint="@color/red_A400"
            android:layout_gravity="right"

            />




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ed_pincodeentry"
                android:hint="Enter Delivery Pincode"
                android:maxLines="1"
                android:imeOptions="actionDone"
                 />

        </android.support.design.widget.TextInputLayout>



        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Check"
            android:typeface="serif"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/login_btn"
            android:textColor="@android:color/white"
            android:id="@+id/btn_checkdelivery"
            android:layout_marginTop="70dp"
            />






    </LinearLayout>



</LinearLayout>