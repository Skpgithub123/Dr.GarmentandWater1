<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutforreg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_grey_200"
    tools:context=".MainActivity">

    <!-- <android.support.design.widget.AppBarLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:theme="@style/AppTheme.AppBarOverlay">

         <android.support.v7.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="?attr/colorPrimary"
             app:popupTheme="@style/AppTheme.PopupOverlay"/>

     </android.support.design.widget.AppBarLayout>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <EditText
                android:id="@+id/etfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_name"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                android:drawableTint="@color/red_400"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:padding="8dp"
                android:singleLine="true" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etlastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_person_pin_black_24dp"
                    android:drawableTint="@color/red_400"
                    android:hint="Lastname"
                    android:maxLines="1"
                    android:textColorHint="@color/white"
                    android:imeOptions="actionNext"
                    android:padding="8dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Email"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:drawableTint="@color/red_400"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawableTint="@color/red_400"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_confirmpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etconfirmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawableTint="@color/red_400"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etmobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Mobile"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawableTint="@color/red_400"
                    android:inputType="number"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_referalcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etreferalcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Referal Code(Optional)"
                    android:drawableLeft="@drawable/ic_group_add_black_24dp"
                    android:drawableTint="@color/red_400"
                    android:drawablePadding="15dp"
                    android:inputType="number"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I have read and agree to "
                    android:textSize="13sp"
                    android:typeface="serif"
                    android:id="@+id/checkBox_termscondition" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:typeface="serif"
                        android:layout_marginTop="9dp"
                        android:textColor="@color/blue_900"
                        android:textSize="13sp"
                        android:id="@+id/txt_termsconditions"
                        android:text="Terms and Conditions"/>

                </LinearLayout>



            </LinearLayout>


            <Button
                android:id="@+id/btnRegister"
                style="?android:textAppearanceSmall"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_50"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_gravity="center"
                android:background="@drawable/login_btn"
                android:text="@string/action_register" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="1"
        android:background="@color/app_primary"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Already have an account?"
        android:textStyle="bold"
        android:clickable="true"
        android:typeface="serif"
        android:id="@+id/txt_alredyhaveaccount"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/app_primary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
