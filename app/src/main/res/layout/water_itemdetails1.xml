<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Quantity"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bordor_shadow_promo"
        android:elevation="5dp"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="133dp"
            android:layout_height="141dp"
            android:id="@+id/water_img"
            android:layout_marginTop="30dp"
            android:background="@drawable/bisleri"
            android:layout_marginStart="21dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image_add"
                    android:src="@drawable/ic_add_box_black_24dp"
                    android:tint="@color/com_facebook_blue"
                    android:layout_marginTop="57dp"
                    android:layout_marginStart="44dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:id="@+id/txt_incremnetvalue"
                    />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image_sub"
                    android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                    android:layout_marginTop="57dp"
                    android:tint="@color/com_facebook_blue"
                    />



            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Price:"
                android:textSize="15sp"
                android:layout_marginTop="100dp"
                android:textStyle="bold"
                android:id="@+id/txtprice"
                android:gravity="center|left"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="123"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/txt_waterrs"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:layout_alignTop="@+id/txtprice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordor_shadow_promo"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Return Empty Can"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_margin="30dp"
            android:id="@+id/textView16"

             />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear"
            android:layout_alignParentTop="true">



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_addreturncan"
                android:src="@drawable/ic_add_box_black_24dp"
                android:tint="@color/com_facebook_blue"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:id="@+id/txt_valuereturncan"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_subreturncan"
                android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                android:layout_marginTop="20dp"
                android:tint="@color/com_facebook_blue"
                />



        </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>