<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/grey_500"
    android:id="@+id/ll_wateritemdetails"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Quantity"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/bordor_shadow_promo"
        android:elevation="5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_700"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:id="@+id/water_img"
                android:layout_marginTop="20dp"
                android:background="@drawable/bislery"
                android:layout_marginStart="21dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txt_wateritemname"
                />


        </LinearLayout>






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image_add"
                    android:src="@drawable/ic_add_box_black_24dp"
                    android:tint="@color/white"
                    android:layout_marginTop="57dp"
                    android:layout_marginStart="44dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:id="@+id/txt_incremnetvalue"
                    />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/image_sub"
                    android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                    android:layout_marginTop="57dp"
                    android:tint="@color/white"
                    />





            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Price:"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_marginTop="100dp"
                android:textStyle="bold"
                android:id="@+id/txtprice"
                android:gravity="center|left"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="123"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:id="@+id/txt_waterrs"
                android:layout_marginLeft="49dp"
                android:layout_marginStart="49dp"
                android:layout_alignTop="@+id/txtprice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordor_shadow_promo"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_700"
        android:elevation="5dp"
        android:orientation="vertical">






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear"
            android:layout_alignParentTop="true">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Return Empty Can"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_margin="30dp"
                android:id="@+id/textView16"

                />



            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_addreturncan"
                android:src="@drawable/ic_add_box_black_24dp"
                android:tint="@color/white"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:id="@+id/txt_valuereturncan"
                />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/img_subreturncan"
                android:src="@drawable/ic_indeterminate_check_box_black_24dp"
                android:layout_marginTop="20dp"
                android:tint="@color/white"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Delivery Type"
                android:textSize="17sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="30dp"
                android:id="@+id/textView30"
                 />



            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/sp_deltype"
                android:backgroundTint="@color/black"
                android:dropDownWidth="fill_parent"

                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txt_initialprice"
                android:visibility="gone"
                android:layout_above="@+id/txt_wateritemname"
                android:layout_toRightOf="@+id/txt_waterrs"
                android:layout_toEndOf="@+id/txt_waterrs" />

        </LinearLayout>




    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0D47A1"
        android:orientation="horizontal"
        android:id="@+id/LL_pricelayout_water"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_gravity="center"
            android:tint="@color/amber_900"
            android:src="@drawable/ic_add_shopping_cart_white_24dp"
            android:layout_marginStart="89dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            android:layout_gravity="center"
            android:id="@+id/txt_fixtotalprice_water"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/txt_displaytotalprice_water"

            />




    </LinearLayout>

</LinearLayout>