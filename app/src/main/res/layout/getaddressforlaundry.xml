<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeLayoutfornet"
        android:background="@color/red_400"
        android:layout_height="340dp">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:layout_gravity="center"
            android:gravity="center_horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>



        </android.support.v7.widget.Toolbar>
<!--
        <fragment
            android:layout_width="match_parent"
            android:layout_height="220dp"
            class="com.google.android.gms.maps.MapFragment"
            android:id="@+id/fragment1"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_shadow"
            android:elevation="5dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="60dp"
            android:id="@+id/relativeLayout4"

            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_fullname_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FullName"
                    android:drawablePadding="15dp"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_mobile_laundry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile"
                    android:drawablePadding="15dp"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etflatno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Flat No"
                    android:drawablePadding="15dp"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:hint="Address Line 1(Company Name,House No,Building)"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etlandmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:hint="Address Line 2(Colony,Street,Locatlity/Area)"
                    android:drawablePadding="15dp"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="15dp"
                    android:hint="City"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etcountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="15dp"
                    android:hint="Country"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_confirmpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etpincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="15dp"
                    android:hint="PinCode"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_addresstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etaddresstype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="15dp"
                    android:hint="Address Title (Optional) e.g:office"
                    android:imeActionId="@+id/login"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"/>


            </android.support.design.widget.TextInputLayout>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as Defalut"
                android:typeface="serif"
                android:textStyle="bold"
                android:id="@+id/cb_setaddrdefaultlaundry" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:tint="@color/red_400"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="SELECT DATE"
                    android:textSize="16sp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_bright"
                    android:id="@+id/txt_selectdate"
                    android:layout_alignBottom="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:text="Select TimeSlot"
                    android:id="@+id/textView49"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:layout_below="@+id/imageView5"
                    android:layout_toEndOf="@+id/imageView5"
                    android:layout_marginTop="27dp"
                    android:layout_alignStart="@+id/imageView5" />


                <Spinner
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:id="@+id/sp_timeslots"
                    android:layout_alignBottom="@+id/textView49"
                    android:layout_toEndOf="@+id/textView49" />

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Delete Address"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:id="@+id/txt_deleteaddress"
                    android:layout_alignTop="@+id/txt_selectdate"
                    android:layout_alignEnd="@+id/sp_timeslots" />-->
            </RelativeLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/btn_save"
                android:textSize="18sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/login_btn" />
<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cancel"
                android:textSize="22sp"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:id="@+id/txt_cancel"
                android:layout_gravity="center_horizontal" />-->


        </LinearLayout>

       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Add a New Address"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/txt_addnewaddress"
            android:textColor="@color/white"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp" />
-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Add Current Location"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_gps_fixed_black_24dp"
            android:typeface="serif"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/txt_addcurrentaddress"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>





</ScrollView>