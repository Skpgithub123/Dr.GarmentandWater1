<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/rr_wateritemdetails"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Quantity"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

    </android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_weight="1"
        android:layout_marginTop="19dp"
        android:id="@+id/water_img"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image_add"
        android:src="@drawable/ic_add_box_black_24dp"
        android:tint="@color/com_facebook_blue"
        android:layout_marginTop="57dp"
        android:layout_marginStart="44dp"
        android:layout_alignTop="@+id/water_img"
        android:layout_toEndOf="@+id/water_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/txt_incremnetvalue"
        android:layout_alignBottom="@+id/image_add"
        android:layout_toEndOf="@+id/image_add" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/image_sub"
        android:src="@drawable/ic_indeterminate_check_box_black_24dp"
        android:tint="@color/com_facebook_blue"
        android:layout_alignBottom="@+id/txt_incremnetvalue"
        android:layout_toEndOf="@+id/txt_incremnetvalue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/txtprice"
        android:layout_below="@+id/image_add"
        android:layout_toStartOf="@+id/image_sub"
        android:layout_marginTop="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/txt_waterrs"
        android:layout_alignBottom="@+id/txtprice"
        android:layout_toEndOf="@+id/txtprice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/txt_wateritemname"
        android:layout_below="@+id/water_img"
        android:layout_alignStart="@+id/water_img"
        android:layout_alignEnd="@+id/water_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0D47A1"
        android:orientation="horizontal"
        android:id="@+id/LL_pricelayout_water"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_gravity="center"
            android:tint="@color/amber_900"
            android:src="@drawable/ic_add_shopping_cart_white_24dp"
            android:layout_marginStart="89dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            android:layout_gravity="center"
            android:id="@+id/txt_fixtotalprice_water"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/white"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/txt_displaytotalprice_water"

            />




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Return Empty Can"
        android:textStyle="bold"
        android:textSize="15sp"
        android:id="@+id/textView16"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/txt_wateritemname"
        android:layout_alignStart="@+id/txt_wateritemname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_addreturncan"
        android:src="@drawable/ic_add_box_black_24dp"
        android:layout_alignTop="@+id/textView16"
        android:tint="@color/com_facebook_blue"

        android:layout_alignStart="@+id/txt_incremnetvalue" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_subreturncan"
        android:tint="@color/com_facebook_blue"

        android:src="@drawable/ic_indeterminate_check_box_black_24dp"
        android:layout_alignTop="@+id/txt_valuereturncan"
        android:layout_toEndOf="@+id/txt_valuereturncan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/txt_valuereturncan"
        android:layout_alignTop="@+id/img_addreturncan"
        android:layout_toEndOf="@+id/img_addreturncan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Delivery Type"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/textView30"
        android:layout_below="@+id/img_addreturncan"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="27dp"
        android:layout_alignEnd="@+id/textView16" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_deltype"
        android:layout_alignTop="@+id/textView30"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView30" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_initialprice"
        android:visibility="gone"
        android:layout_above="@+id/txt_wateritemname"
        android:layout_toRightOf="@+id/txt_waterrs"
        android:layout_toEndOf="@+id/txt_waterrs" />


</RelativeLayout>