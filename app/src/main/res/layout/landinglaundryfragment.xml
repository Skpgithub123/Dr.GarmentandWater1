<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/blue_grey_200"
    android:layout_height="match_parent">



    <com.daimajia.slider.library.SliderLayout
        android:layout_width="match_parent"
        android:layout_height="253dp"
        android:id="@+id/sliderlayout"
        >

    </com.daimajia.slider.library.SliderLayout>


    <com.daimajia.slider.library.Indicators.PagerIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_indicater">

    </com.daimajia.slider.library.Indicators.PagerIndicator>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:src="@drawable/capture"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:id="@+id/imagewashfold"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:text="washandfold"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:id="@+id/txt_washfold"
            android:lines="3"
             />

    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:src="@drawable/capture"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/imagewashiron"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="washandiron"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:lines="3"
                android:layout_marginLeft="10dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:id="@+id/txt_washiron"
                 />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:src="@drawable/capture"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:id="@+id/imagedrycleaning"

                android:layout_marginStart="15dp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="11sp"
                android:text="drycleaning"
                android:textColor="@color/white"
                android:lines="3"
                android:typeface="serif"
                android:id="@+id/txt_drycleaning"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
               />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Minimum Order="
            android:textStyle="bold"
            android:gravity="center|center_horizontal"
            android:id="@+id/textView8"
            android:textColor="@color/tabsScrollColor"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tabsScrollColor"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/txtminimum"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignEnd="@+id/imagewashiron" />


    </LinearLayout>



</LinearLayout>