<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/blue_grey_300"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refused!"
        android:textColor="@color/red_A700"
        android:gravity="center"
        android:typeface="serif"
        android:layout_margin="20dp"
        android:textSize="35sp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your payment was refused"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:typeface="serif"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/red_A700"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight=".2"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Amount:"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:textSize="18sp"
            android:typeface="serif"
            android:id="@+id/txtamount_failed"
            android:textColor="@color/black"
            android:text=""/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight=".2"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="Transaction ID:"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:textSize="18sp"
            android:typeface="serif"
            android:id="@+id/txttxanid_failed"
            android:textColor="@color/black"
            android:text=""/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to shopping"
        android:textSize="20sp"
        android:background="@drawable/login_btn"
        android:textAllCaps="false"
        android:typeface="serif"
        android:textStyle="bold"
        android:id="@+id/btn_returntoshopping"
        android:textColor="@color/white"
        android:layout_margin="20dp"/>

</LinearLayout>