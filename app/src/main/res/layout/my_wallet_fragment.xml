<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_300"
    tools:context="com.example.saravanan.waterandlander_recentorder.MyWallet">


    <ListView
        android:id="@+id/wallet_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="It seems like you haven't ordered anything yet.Why not do it right now"
        android:background="@color/grey_300"
        android:lines="2"
        android:visibility="gone"
        android:textSize="17sp"
        android:typeface="serif"
        android:id="@+id/walletmyordertextview"
        android:gravity="center"/>

</LinearLayout>
